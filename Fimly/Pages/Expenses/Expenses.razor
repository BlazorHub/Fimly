@page "/expenses"

@if (People is null)
{
    <LoadingSpinner />
}
else
{
    <div class="jumbotron jumbotron-fluid shadow-sm pt-4">
        <div class="container-fluid">

            <div class="row h-100">
                <div class="col">
                    <h2 class="dark-font">Expenses</h2>
                    <p class="dark-font">Manage your individual or household expenses.</p>
                </div>

                @if (People.Count != 0)
                {
                    <div class="col my-auto">
                        <div class="float-right">
                            <a href="/expenses/new" class="btn btn-success primary-font shadow-sm">
                                New Expense
                                <i class="fas fa-plus ml-1"></i>
                            </a>
                        </div>
                    </div>
                }
            </div>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <NavLink class="breadcrumb-item" href="/">Home</NavLink>
                    <NavLink class="breadcrumb-item" aria-current="page">Expenses</NavLink>
                </ol>
            </nav>

            <hr class="mb-4" />

            <CascadingValue Value="UserConfig">
                <CascadingValue Value="ExpenseTypes">

                    <div class="container">

                        @if (People.Count == 0)
                        {
                            <p class="dark-font lead text-center mt-5">There are no people configured. <a href="/people/new">Add a person </a> to get started.</p>
                        }
                        else
                        {
                            <div class="dropdown">
                                <button class="btn btn-success primary-font dropdown-toggle" type="button" id="monthSelection" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @FilterMonth
                                </button>
                                <div class="dropdown-menu" aria-labelledby="monthSelection">
                                    @for (int i = 0; i < Months.Length; i++)
                                    {
                                        @if (Months[i] == FilterMonth)
                                        {
                                            <a class="dropdown-item active-dropdown primary-font" href="#">@Months[i]</a>
                                        }
                                        else
                                        {
                                            <a class="dropdown-item" href="#">@Months[i]</a>
                                        }
                                    }
                                </div>
                            </div>

                            foreach (Person person in People)
                            {
                                <Animate Delay="TimeSpan.FromSeconds(AnimationDelay)">
                                    <ExpenseCard Person="person" StateChanged="StateChanged" />
                                </Animate>

                                AnimationDelay += 0.4;
                            }
                        }

                    </div>

                </CascadingValue>
            </CascadingValue>
        </div>
    </div>
}
