@page "/people/new"

@if (UserConfig != null)
{
    <div class="jumbotron jumbotron-fluid shadow-sm pt-4">
        <div class="container-fluid">

            <div class="row h-100">
                <div class="col">
                    <h2 class="dark-font">New Person</h2>
                    <p class="dark-font">Add a new person to the household.</p>
                </div>
            </div>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <NavLink class="breadcrumb-item" href="/">Home</NavLink>
                    <NavLink class="breadcrumb-item" href="/people">People</NavLink>
                    <NavLink class="breadcrumb-item" aria-current="page">New</NavLink>
                </ol>
            </nav>

            <hr class="mb-4" />


            <div class="mx-auto mt-5" style="max-width:40rem">
                <div class="card shadow zoom">
                    <div class="card-header text-center">
                        <h5 class="dark-font mt-2">New Person Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <EditForm Model="Person" OnValidSubmit="HandleValidSubmitAsync">
                                    <DataAnnotationsValidator />
                                    <ValidationSummary />

                                    <div class="form-group">
                                        <label for="personName" class="dark-font">Name</label>
                                        <InputText id="personName" class="form-control" @bind-Value="@Person.Name" />
                                    </div>
                                    <div class="form-group">
                                        <label for="personIncome" class="dark-font">Monthly Income (After Tax)</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">@UserConfig.Currency.Symbol</span>
                                            </div>
                                            <InputNumber id="personIncome" class="form-control" @bind-Value="@Person.Income" />
                                        </div>
                                    </div>

                                    <div class="text-center mt-5">
                                        <button type="submit" class="btn btn-success primary-font shadow-sm">Save</button>
                                    </div>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
