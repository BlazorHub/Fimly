@page "/settings"

@if (UserConfig is null)
{
    <LoadingSpinner />
}
else
{
    <div class="jumbotron jumbotron-fluid shadow-sm pt-4">
        <div class="container-fluid">

            <div class="row h-100">
                <div class="col">
                    <h2 class="dark-font">Settings</h2>
                    <p class="dark-font">Configue application settings.</p>
                </div>
            </div>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <NavLink class="breadcrumb-item" href="/">Home</NavLink>
                    <NavLink class="breadcrumb-item">Settings</NavLink>
                </ol>
            </nav>

            <hr class="mb-4" />

            <div class="container">
                <div class="row">
                    <div class="col mx-auto">
                        <div class="card shadow">
                            <div class="card-body">
                                <EditForm Model="UserConfig" OnValidSubmit="HandleValidSubmit">
                                    <div class="form-group form-inline mt-4">
                                        <label for="currency" class="mr-3 dark-font">Select Currency:</label>
                                        <select id="currency" class="form-control" @bind="UserConfig.CurrencyId">
                                            @foreach (var currency in Currencies)
                                            {
                                                <option value="@currency.Id">
                                                    @currency.Symbol
                                                </option>
                                            }
                                        </select>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-success light-font shadow">
                                            Save
                                            <i class="fas fa-save ml-1"></i>
                                        </button>
                                    </div>
                                </EditForm>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
