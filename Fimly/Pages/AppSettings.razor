@page "/settings"

@if (UserConfig is null)
{
    <LoadingSpinner />
}
else
{
    <div class="container-fluid fade fadein">

        <h2 class="dark-font">App Settings</h2>

        <p>Configue application settings.</p>

        <hr class="mb-4" />

        <div class="container">
            <div class="row">
                <div class="col mx-auto">
                    <div class="card shadow">
                        <div class="card-body">
                            <EditForm Model="UserConfig" OnValidSubmit="HandleValidSubmit">
                                <div class="form-group form-inline mt-4">
                                    <label for="currency" class="mr-3 dark-font">Select Currency:</label>
                                    <select id="currency" class="form-control" @bind="UserConfig.CurrencyId">
                                        @foreach (var currency in Currencies)
                                        {
                                            <option value="@currency.Id">
                                                @currency.Symbol
                                            </option>
                                        }
                                    </select>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success light-font shadow">Save <span class="oi oi-hard-drive ml-2"></span></button>
                                </div>
                            </EditForm>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}