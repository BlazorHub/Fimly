<div class="top-row navbar navbar-dark">
    <a class="navbar-brand ml-1" href="">
        <img src="/img/logos/fimly-logo-white.png" width="160" />
    </a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link primary-font" href="" Match="NavLinkMatch.All">
                <i class="fas fa-home nav-icon mr-3"></i> Home
            </NavLink>
        </li>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link primary-font" href="people">
                        <i class="fas fa-users nav-icon mr-3"></i> People
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link primary-font" href="expenses">
                        <i class="fas fa-money-check-alt nav-icon mr-3"></i> Expenses
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link primary-font" href="settings">
                        <i class="fas fa-cogs nav-icon mr-3"></i> App Settings
                    </NavLink>
                </li>
            </Authorized>
            <NotAuthorized>

            </NotAuthorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
