@page "/login"

@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-flud min-vh-100 fade fadein">
    <div class="row vh-100 justify-content-center align-items-center">

        <div class="col" style="max-width:35rem">
            <div class="card shadow">
                <div class="card-body">

                    <div class="card-title card-title ml-2 mt-4 mb-5 text-center">
                        <a href="/">
                            <img src="/img/logos/fimly-logo-black.png" alt="fimly logo" width="220" class="mb-5 mt-4" />
                        </a>

                        <h2 class="dark-font">@ViewData["Title"]</h2>
                    </div>

                    <div class="container">
                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mb-4">
                                <input asp-for="Input.Email" class="form-control" placeholder="Email *" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <input asp-for="Input.Password" class="form-control" placeholder="Password *" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>

                            <div class="form-group mb-4 text-center">
                                <button type="submit" class="btn btn-lg btn-success shadow primary-font">Log in</button>
                            </div>

                            <div class="form-group">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p class="dark-font">
                                    Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>.
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}