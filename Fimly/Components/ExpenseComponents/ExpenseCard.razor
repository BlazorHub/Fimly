<div class="mx-auto mt-4">
    <div class="card shadow zoom">

        <div class="card-header">
            <h4 class="dark-font mt-2 ml-2">
                @if (Person.IsSharedPerson)
                {
                    <span>Shared Expenses</span>
                }
                else
                {
                    <span>@Person.Name's Expenses</span>
                }
            </h4>
        </div>

        <div class="card-body">
            <div class="mb-4 dark-font">
                <div class="card-text mt-4">
                    @if (ExpenseTypes is null)
                    {
                        <p><em>Loading...</em></p>
                    }
                    else
                    {
                        @if (Expenses.Count == 0)
                        {
                            <div class="text-center">
                                @if (Person.IsSharedPerson)
                                {
                                    <p>There are no shared expenses for this household.</p>
                                }
                                else
                                {
                                    <p>This person dosen't have any individual expenses.</p>
                                }

                                <p><a href="/expenses/new">Add a new expense.</a></p>
                            </div>
                        }
                        else
                        {
                            <div class="text-center dark-font mt-4 mb-4">
                                @if (Person.IsSharedPerson)
                                {
                                    <p>
                                        There are <strong>@FinanceService.FormatToConfigCurrency(UserConfig, Person.Expenses.Sum(e => e.Cost))</strong> shared expenses in @CurrentMonth.
                                    </p>
                                }
                                else
                                {
                                    <p>
                                        @Person.Name will spend <strong>@FinanceService.FormatToConfigCurrency(UserConfig, Person.Expenses.Sum(e => e.Cost))</strong> in @CurrentMonth.
                                    </p>
                                }
                            </div>

                            <div class="mb-4">
                                <TabControl>
                                    <TabPage Text="Expenses">
                                        <table class="table">
                                            <tbody>
                                                @foreach (Expense expense in Expenses)
                                                {
                                                    <tr>
                                                        <td>
                                                            <p class="text-center dark-font mb-0">
                                                                <i class="@expense.Icon expense-icon"></i>
                                                            </p>
                                                        </td>
                                                        <td>@expense.Name</td>
                                                        <td>@FinanceService.GetPercentageOfMonthlyExpenditure(expense, Expenses)</td>
                                                        <td>@FinanceService.FormatToConfigCurrency(UserConfig, expense.Cost)</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </TabPage>
                                    <TabPage Text="Categories">
                                        <table class="table">
                                            <tbody>
                                                @foreach (Expense expense in ExpensesByCategory)
                                                {
                                                    <tr>
                                                        <td>
                                                            <p class="text-center dark-font mb-0">
                                                                <i class="@expense.Icon expense-icon"></i>
                                                            </p>
                                                        </td>
                                                        <td>@expense.Name</td>
                                                        <td>@FinanceService.GetPercentageOfMonthlyExpenditure(expense, Expenses)</td>
                                                        <td>@FinanceService.FormatToConfigCurrency(UserConfig, expense.Cost)</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </TabPage>
                                </TabControl>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

    </div>
</div>